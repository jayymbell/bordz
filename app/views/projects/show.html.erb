<div class="row">
  <div class="col-sm-12">
    <div class="actions float-right">
    <%= link_to 'Back', projects_path, class: 'btn btn-link btn-sm' %>
      <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-link btn-sm', remote: true %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="field">
      <strong>Name</strong>
      <br/>
      <%= @project.name %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="field">
      <strong>Description</strong>
      <br>
      <%= @project.description %>
    </div>
  </div>
</div>

<div class="row" style="margin-top: 20px;">
  <div class="col-sm-12">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" id="tickets-tab" data-toggle="tab" href="#tickets" role="tab" aria-controls="tickets" aria-selected="true">Tickets</a>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="tickets" role="tabpanel" aria-labelledby="tickets-tab">
        <%= render 'tickets'%>
      </div>
    </div>
  </div>
</div>
