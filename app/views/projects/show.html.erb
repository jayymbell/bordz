<div class="row">
  <div class="col-sm-12">
    <div class="actions float-right">
    <%= link_to 'Back', projects_path, class: 'btn btn-link btn-sm' %>
      <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-link btn-sm', remote: true %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="field">
      <strong>Name</strong>
      <br/>
      <%= @project.name %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="field">
      <strong>Description</strong>
      <br>
      <%= @project.description %>
    </div>
  </div>
</div>
