<%if params[:view] == 'users'%>
    $('#dialog h3').html("<%=@project_role.name %>");
    $('.modal-body').html('<%= j render("users", project_role: @project_role ) %>');
<%elsif params[:view] == 'notifications'%>
    $('#dialog h3').html("<%=@project_role.name %>");
    $('.modal-body').html('<%= j render("notifications", project_role: @project_role ) %>');
<%else%>
    $('#dialog h3').html("Edit Role");
    $('.modal-body').html('<%= j render("form", project_role: @project_role ) %>');
<%end%>

$('#dialog').modal("show");

$('#dialog').on('shown.bs.modal', function () {
$('.first_input').focus()
})