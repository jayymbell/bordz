<div class="row">
  <div class="col-sm-12">
    <div class="actions float-right">
    <%= link_to 'Back', groups_path, class: 'btn btn-link btn-sm' %>
      <%= link_to 'Edit', edit_group_path(@group), class: 'btn btn-link btn-sm', remote: true %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="field">
      <strong>Name:</strong>
      <br/>
      <%= @group.name %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="field">
      <strong>Description:</strong>
      <br>
      <%= @group.description %>
    </div>
  </div>
</div>
