<div class="row">
  <div class="col-sm-12">
  <h3 style="display:inline-block;">Workflows</h3>
    <div class="actions float-right">
    <%= link_to 'Back', workflows_path, class: 'btn btn-link btn-sm' %>
      <%= link_to 'Edit', edit_workflow_path(@workflow), class: 'btn btn-link btn-sm', remote: true %>
    </div>
  </div>
</div>
