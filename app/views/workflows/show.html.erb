  <div class="col-sm-12">
    <div class="field">
      <h5><%= @workflow.name %></h5>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="field">
      <%= @workflow.description %>
    </div>
  </div>
</div>

