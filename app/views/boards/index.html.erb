<div class="row">
<div class="col-sm-12">
<%= link_to 'New Board', new_board_path, class: 'btn btn-success btn-sm float-right', remote: true %>
<h3 style="display:inline-block;">Boards</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= link_to board.id, board_path(board) %></td>
        <td><%= board.name %></td>
        <td>
        <%= link_to board, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-trash text-danger float-right"></i>
        <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
