<div class="row">
<div class="col-sm-12">
<h5 style="display:inline-block;">Projects</h5>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Workflow</th>
      <th>Users</th>
      <th>Tickets</th>
      <th>Last Ticket</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project_path(project) %></td>
        <td><%= project.workflow.name %></td>
        <td><%= project.users.count %></td>
        <td><%= project.tickets.count %></td>
        <td><%= project.tickets.order(:created_at).last.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
