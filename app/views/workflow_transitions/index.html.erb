<p id="notice"><%= notice %></p>

<h1>Workflow Transitions</h1>

<table>
  <thead>
    <tr>
      <th>Workflow</th>
      <th>Name</th>
      <th>Description</th>
      <th>Start state</th>
      <th>End state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflow_transitions.each do |workflow_transition| %>
      <tr>
        <td><%= workflow_transition.workflow %></td>
        <td><%= workflow_transition.name %></td>
        <td><%= workflow_transition.description %></td>
        <td><%= workflow_transition.start_state %></td>
        <td><%= workflow_transition.end_state %></td>
        <td><%= link_to 'Show', workflow_transition %></td>
        <td><%= link_to 'Edit', edit_workflow_transition_path(workflow_transition) %></td>
        <td><%= link_to 'Destroy', workflow_transition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

