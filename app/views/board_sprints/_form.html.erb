<%= form_with(model: board_sprint, remote: true) do |form| %>
  <%= render 'layouts/error_messages', object: form.object %>

  <div class="row">
  <div class="col-sm-12">
    <div class="actions float-right">
      <%= form.submit 'Submit', class: 'btn btn-link btn-sm' %>
    </div>
  </div>
</div>

  
  <%= form.hidden_field :board_id, id: :board_sprint_board_id %>
    <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :board_sprint_name %>
  </div>
<div class="row">
  <div class="col-sm-6">
    <div class="field">
      <%= form.label :starts_on %>
      <%= form.text_field :starts_on, id: :board_sprint_starts_on, :data => {:provide =>'datepicker'} %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="field">
    <%= form.label :ends_on %>
    <%= form.text_field :ends_on, id: :board_sprint_ends_on, :data => {:provide =>'datepicker'} %>
  </div>
  </div>
</div>
<% end %>
