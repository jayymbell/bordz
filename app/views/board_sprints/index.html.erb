<p id="notice"><%= notice %></p>

<h1>Board Sprints</h1>

<table>
  <thead>
    <tr>
      <th>Board</th>
      <th>Starts on</th>
      <th>Ends on</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @board_sprints.each do |board_sprint| %>
      <tr>
        <td><%= board_sprint.board %></td>
        <td><%= board_sprint.starts_on %></td>
        <td><%= board_sprint.ends_on %></td>
        <td><%= board_sprint.name %></td>
        <td><%= link_to 'Show', board_sprint %></td>
        <td><%= link_to 'Edit', edit_board_sprint_path(board_sprint) %></td>
        <td><%= link_to 'Destroy', board_sprint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

