<div class="row" style="margin-top: 10px;">
  <div class="col-sm-12">
  <ul class="list-group">
    <% @ticket.transitions.each do |transition|%>
      <li class="list-group-item">
        <div class="row">
          <div class="col-sm-6">
            <%=transition.workflow_transition.name%>
          </div>
          <div class="col-sm-6">
            <span style="float:right;">
              <%= link_to transition.creator.full_name, user_path(transition.creator)%> on 
              <%=transition.workflow_transition.created_at%>
            </span>
          </div>
        </div>
      </li>
    <%end%>
  </ul>
  </div>
</div>